{
  "name": "qchat",
  "description": "一个最小可用的安全聊天应用",
  "author": "QChat Team",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "dependencies": {
    "electron-store": "^8.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "better-sqlite3": "^11.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "electron-rebuild": "^3.2.9",
    "node-gyp": "^12.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0",
    "ws": "^8.16.0"
  },
  "scripts": {
    "start": "concurrently -k \"cross-env BROWSER=none npm run react:start\" \"npm run electron:wait\"",
    "react:start": "vite",
    "electron:wait": "wait-on tcp:5173 && electron .",
    "server": "node server/index.js",
    "build": "tsc && vite build",
    "electron:pack": "npm run build && electron-builder -c.mac.identity=null"
  },
  "build": {
    "appId": "com.qchat.app",
    "productName": "QChat",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  }
}
